         <children>
            <Pane nodeOrientation="LEFT_TO_RIGHT">
               <children>
                  <Label fx:id="scoreLabel">
                     <font>
                        <Font size="30.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
            <Pane nodeOrientation="RIGHT_TO_LEFT" GridPane.columnIndex="1">
               <children>
                  <Label fx:id="timerLabel" alignment="CENTER_RIGHT" contentDisplay="RIGHT" textAlignment="RIGHT">
